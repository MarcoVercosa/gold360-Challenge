generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Register {
  id         Int      @id @default(autoincrement()) //cria campo id do tipo string, @id - chave prim치ria -  @default() usar치 o auto incremente utilizando o uuid 
  firstName  String   @db.VarChar(50)
  fullName   String   @db.VarChar(100)
  email      String   @unique @db.VarChar(50) //deve ser unico
  password   String   @db.VarChar(100)
  active     Boolean
  canceled   Boolean
  isAdmin    Boolean
  created_at DateTime @default(now()) //ser치 do tipo data hora e o prisma fara automaticamente

  //informa qual o nome que ser치 dado a tabela no BD
  @@map("Registers")
}
